{% extends 'base.html.twig' %}

{% block title %}Book
{% endblock %}

{% block body %}
	<h1>Book</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Title</th>
				<td>{{ book.Title }}</td>
			</tr>
			<tr>
				<th>Name</th>
				<td>{{ book.author.firstName }}
					{{ book.author.lastName }}</td>
			</tr>
			<tr>
				<th>category</th>
				<td>{{ book.category.categoryName }}</td>
			</tr>
			<tr>
				<th>Resume</th>
				<td>{{ book.resume }}</td>
			</tr>
			<tr>
				<th>DueDate</th>
				<td>{{ book.dueDate ? book.dueDate|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_book_index') }}">back to list</a>

	<a href="{{ path('app_book_edit', {'id': book.id}) }}">edit</a>

	{{ include('book/_delete_form.html.twig') }}
{% endblock %}
